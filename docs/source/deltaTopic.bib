	keywords = {1\_deltaTopic},
	month = oct,
	primaryclass = {cs.LG},
	title = {{Mixture-of-Experts} Variational Autoencoder for clustering and generating from similarity-based representations},
	year = 2019}

@article{Anglesio2017-ik,
	abstract = {BACKGROUND: Endometriosis, defined as the presence of ectopic
