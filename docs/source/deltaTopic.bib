@article{Griffiths2004-fu,
	abstract = {A first step in identifying the content of a document is
              determining which topics that document addresses. We describe a
              generative model for documents, introduced by Blei, Ng, and
              Jordan [Blei, D. M., Ng, A. Y. \& Jordan, M. I. (2003) J. Machine
